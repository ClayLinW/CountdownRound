<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <com.beauty.circleprogressbarproject.CircleProgressbar
        android:id="@+id/cp_progressFirst"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        app:cpb_backgroundProgressColor="@color/colorAccent"
        app:cpb_backgroundProgressWidth="12dp"
        app:cpb_clockwise="true"
        app:cpb_foregroundProgressColor="@color/white"
        app:cpb_foregroundProgressWidth="4dp"
        app:cpb_maxProgress="100"
        app:cpb_progress="100"
        app:cpb_roundedCorner="true"
        app:cpb_touchEnabled="true" />

    <com.beauty.circleprogressbarproject.CircleProgressbar
        android:id="@+id/cp_progressSecond"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dp"
        app:cpb_backgroundProgressColor="@android:color/transparent"
        app:cpb_backgroundProgressWidth="12dp"
        app:cpb_clockwise="true"
        app:cpb_foregroundProgressColor="@color/main_color"
        app:cpb_foregroundProgressWidth="4dp"
        app:cpb_maxProgress="100"
        app:cpb_progress="100"
        app:cpb_roundedCorner="true"
        app:cpb_touchEnabled="true" />

    <RelativeLayout
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="50dp">

        <com.beauty.circleprogressbarproject.CircleProgressbar
            android:id="@+id/cp_progressThird"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            app:cpb_backgroundProgressColor="@android:color/transparent"
            app:cpb_backgroundProgressWidth="12dp"
            app:cpb_clockwise="true"
            app:cpb_foregroundProgressColor="@color/main_color"
            app:cpb_foregroundProgressWidth="4dp"
            app:cpb_maxProgress="100"
            app:cpb_progress="100"
            app:cpb_roundedCorner="true"
            app:cpb_touchEnabled="true" />

        <TextView
            android:id="@+id/tv_countdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textStyle="bold"
            android:textColor="@color/main_color"
            android:textSize="16sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="start"
            android:text="开始" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:onClick="restore"
            android:text="恢复" />
    </LinearLayout>

</LinearLayout>